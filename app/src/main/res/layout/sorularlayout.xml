<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:background="#e4f9f8"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_soruyazanKisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="dfsfsdfsd"/>

        <TextView
            android:id="@+id/tv_soruIcerik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="dfsfsdfsd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="60dp">

        <Button
            android:id="@+id/btn_soruCevapla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#de4353"
            android:text="Cevapla"/>
        <Button
            android:id="@+id/btn_soruSoranKisiAra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#a4991f"
            android:text="Ara"/>

    </LinearLayout>

</LinearLayout>