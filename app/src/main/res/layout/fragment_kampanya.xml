<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.KampanyaFragment">

     <LinearLayout
         android:id="@+id/kampanyaheader"
         android:layout_alignParentTop="true"
         android:layout_width="match_parent"
         android:background="#345"
         android:layout_marginBottom="10dp"
         android:layout_height="50dp"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/imgKampanyaBack"
             android:src="@drawable/ic_apps_black_24dp"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="1"/>

         <TextView
             android:layout_marginLeft="4dp"
             android:layout_marginRight="4dp"
             android:layout_width="0dp"
             android:text="Kampanya Listesi"
             android:layout_gravity="center"
             android:textSize="20dp"
             android:textStyle="bold"
             android:textColor="#fff"
             android:layout_height="wrap_content"
             android:layout_weight="5"/>
     </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/kampanyaheader"
        android:id="@+id/recylerKampanya"
        android:layout_width="match_parent"
        android:layout_above="@id/btnKampanyaEkleAlertdialog"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>


        <android.support.design.button.MaterialButton
            android:id="@+id/btnKampanyaEkleAlertdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="Yeni Kampanya Ekle"
            android:layout_alignParentBottom="true"/>


</RelativeLayout>